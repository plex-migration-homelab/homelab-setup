{
	"name": "Go",
	"dockerComposeFile": "docker-compose.yml",
	"service": "devcontainer",
	"workspaceFolder": "/workspace",
	"remoteUser": "vscode",
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,readonly,type=bind",
		"source=${localEnv:HOME}/.config/git,target=/home/vscode/.config/git,readonly,type=bind",
		"source=${localEnv:HOME}/.bashrc,target=/home/vscode/.bashrc,readonly,type=bind",
		"source=${localEnv:HOME}/.zshrc,target=/home/vscode/.zshrc,readonly,type=bind",
		"source=${localEnv:HOME}/.p10k.zsh,target=/home/vscode/.p10k.zsh,readonly,type=bind"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go"
			],
			"settings": {
				"go.useLanguageServer": true,
				"extensions.ignoreRecommendations": true
			}
		}
	},
	"postCreateCommand": "cd homelab-setup && go mod download && golangci-lint cache clean"
}
